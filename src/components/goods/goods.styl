@import "../../common/stylus/mixin.styl"
.goods
  display flex
  position absolute
  top 175px
  bottom 46px
  overflow hidden
  .menu-wrapper
    flex 0 0 80px
    width 80px
    overflow hidden
    .menu-item
      display table
      height 54px
      widows 56px
      line-height 14px
      padding 0 12px
      &.current
        position relative
        z-index 10
        margin-top -1px
        background #fff
        font-weight:700
      .text
        display table-cell
        width 56px
        vertical-align middle
        border-bottom 1px solid rgba(7,17,27,0.1)
        font-size 12px
        text-align center;
        .icon
          display inline-block
          width 16px
          height 16px
          vertical-align top
          margin-right 2px
          background-size 16px 16px
          &.decrease
            bg-image('decrease_3');
          &.discount
            bg-image('discount_3');
          &.guarantee
            bg-image('guarantee_3');
          &.invoice
            bg-image('invoice_3');
          &.special
            bg-image('special_3');
  .foods-wrapper
    flex 1
    overflow hidden
    .title
      padding-left 14px
      height 26px
      line-height 26px
      border-left 2px solid #d9dde1
      font-size 12px
      color rgb(147,153,159)
      background #f3f5f7
    .food-item
      display flex
      margin 18px
      padding-bottom 18px
      border-bottom 1px solid rgba(7,17,27,0.1)
      &.last-child
        border none
        margin-bottom 0
      .icon
        flex  00 57px
        margin-left 10px
      .content
        flex 1
        margin-left 10px
        position relative
        .name
          margin 2px 0 8px 0
          height 14px
          line-height 14px
          font-size 14px
          color rgb(7,17,27)
        .desc
          margin-bottom 8px
          line-height 12px
          font-size 10px
          color rgb(147,153,159)
        .extra
          margin-bottom 12px
          line-height 10px
          font-size 10px
          color rgb(147,153,159)
          .count
            margin-left 12px
        .price
          font-weight 700
          line-height 24px
          .new
            margin-right 8px
            font-size 14px
            color rgb(240,20,20)
          .old
            color rgb(147,153,159)
            text-decoration line-through
            font-size 10px
        .cartAdd-wrapper
           position absolute
           right 0
           bottom -10px
