/* @import "../../../common/stylus/icons.styl" */
.order-header
  width 100%
  height 80px
  background #FFF
  .title
    width 100%
    display inline-block
    font-size 18px
    text-align center
    color rgb(7,17,27)
    line-height 14px
    font-weight 700
    margin-top 8px
  .navbar
    padding 6px
    border-top 1px solid rgba(7,17,27,0.1)
    margin 8px 0
    display flex
    text-align center
    .navbar_item
      flex 1
      float left
      .icon-已完成:before {
        content: "\e900";
      }
      .icons
        display inline-block
        font-size 16px
        color rgb(255,153,0)
        &.active
          color rgb(0,160,220)
      .text
        display inline-block
        font-size 12px
        color rgb(7,17,27)



